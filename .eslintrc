{
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "detect" // Tells eslint-plugin-react to automatically detect the version of React to use
        }
    },
    "parser": "@typescript-eslint/parser",
    "extends": ["plugin:react/recommended"],
    "rules": {
        "react/prop-types": "off",
        "react/display-name": 0
    }
}
