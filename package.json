{
    "name": "@salable/paddle-checkout-react",
    "version": "0.1.1",
    "description": "Paddle checkout library",
    "author": "Salable",
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.tsx",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Salable/paddle-checkout-react.git"
    },
    "keywords": [
        "Salable",
        "Paddle",
        "react",
        "nextjs",
        "checkout"
    ],
    "bugs": {
        "url": "https://github.com/Salable/paddle-checkout-react/issues"
    },
    "homepage": "https://github.com/Salable/paddle-checkout-react#readme",
    "scripts": {
        "test:unit": "jest",
        "build": "rollup -c",
        "test:watch": "jest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\"",
        "commit": "commit",
        "release": "npm version patch",
        "release-alpha": "npm version prepatch --preid=alpha",
        "release:minor": "npm version minor",
        "release-alpha:minor": "npm version preminor --preid=alpha",
        "release:major": "npm version major",
        "release-alpha:major": "npm version premajor --preid=alpha",
        "version": "npm run build",
        "postversion": "git push && git push --tags"
    },
    "peerDependencies": {
        "react": ">= 16.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.3",
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@commitlint/prompt-cli": "^12.1.4",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@rollup/pluginutils": "^4.1.1",
        "@testing-library/jest-dom": "^5.12.0",
        "@testing-library/react": "^11.2.7",
        "@types/react-dom": "^17.0.6",
        "@typescript-eslint/eslint-plugin": "^4.25.0",
        "@typescript-eslint/parser": "^4.25.0",
        "babel-loader": "^8.2.2",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.0.1",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.0",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "rollup": "^2.50.1",
        "rollup-plugin-cleaner": "^1.0.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.1",
        "rollup-plugin-typescript2": "^0.30.0",
        "standard-version": "^9.3.0",
        "typescript": "4.4.4"
    },
    "files": [
        "dist"
    ]
}
